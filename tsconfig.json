{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*.ts", "api/**/*.d.ts", "env.d.ts"],
  "ts-node": {
    "files": true
  }
}
